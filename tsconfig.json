{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ES6",
        "jsx": "react",
        "jsxFactory": "m",
        "jsxFragmentFactory": "m.Frag",
        "module": "ES2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "keyofStringsOnly": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "lib":[
            "dom",
            "ES6",
            "ES2020",
        ],
        "removeComments": true,
    }
}