@tailwind base;
@tailwind components;
@tailwind utilities;

.chip-row,.chip-top-row {
    @apply justify-center select-none flex flex-row;
    margin-left: -15px;
    margin-right: -15px;
}

.chip-row:hover {
    @apply bg-hover-yellow;
}

.chip-top-row {
    @apply sticky top-0;
    background-color: gray !important;
}

.chip-cell {
    background-color: inherit;
}