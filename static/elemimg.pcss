@tailwind base;
@tailwind components;
@tailwind utilities;

.chipImgBox {
  @apply whitespace-nowrap inline-block;
}

%chipImg {
  @apply py-0 align-middle transform-gpu scale-125 -translate-y-px;
  padding-left: 2px;
  padding-right: 2px;
}

.fireChip {
  @extend %chipImg;
  content: url("./img/fire.webp");
}

