@tailwind base;
@tailwind components;
@tailwind utilities;

%chipDescBox {
    @apply rounded-t-2xl bg-no-repeat bg-cover;
    background-size: 100% 100%;
}

.chipDescBackgroundStd {
    @extend %chipDescBox;
    background-image: url("img/chip-background.png");
}

.chipDescBackgroundSupprt {
    @extend %chipDescBox;
    background-image: url("img/chip-background-support.png");
}

.chipDescBackgroundMega {
    @extend %chipDescBox;
    background-image: url("img/chip-background-mega.png");
}

.chipDescBackgroundGiga {
    @extend %chipDescBox;
    background-image: url("img/chip-background-giga.png");
}

.chipDescBackgroundDark {
    @extend %chipDescBox;
    background-color: purple;
}

.chipDescPadding {
    margin-left: 6px;
    margin-right: 6px;
}

.chipDescSm {
    font-size: 12px; /*text-xs*/
}

.chipDescMd {
    font-size: 14px; /*text-sm*/
}

.chipDescLg {
    font-size: 16px; /*text-base*/
}

.chipDescDiv {
    text-align: left;
    border-top: 1px solid black;
    background-color: transparent;
    max-height: 70vh;
    overflow-y: scroll;
    overflow-x: hidden;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

.chipDescDiv::-webkit-scrollbar {
    display: none;
}

@keyframes chip-in-one {
    0% {
     transform:rotateY(-90deg)
    }
    to {
     transform:rotateY(0deg)
    }
}
@keyframes chip-in-two {
    0% {
     transform:rotateY(-90deg)
    }
    to {
     transform:rotateY(0deg)
    }
}

.chipWindowOne {
    animation-name:chip-in-one;
    animation-duration:.3s;
    animation-iteration-count:1
}

.chipWindowTwo {
    animation-name:chip-in-two;
    animation-duration:.3s;
    animation-iteration-count:1
}